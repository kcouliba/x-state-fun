{
  "key": "repair_bot",
  "initial": "idle",
  "states": {
    "idle": {
      "actions": ["resetTries"],
      "on": { "MOVE": "moving" }
    },
    "moving": { "on": { "LAND": "inplace" } },
    "inplace": { "on": { "MOVE": "moving", "DIAGNOSE": "diagnosing" } },
    "diagnosing": {
      "on": {
        "REPAIR": {
          "target": "repairing",
          "actions": ["incRepairTries"],
          "cond": "canTryToRepair"
        },
        "CANNOT_REPAIR": {
          "target": "idle",
          "actions": ["notifyFailure"],
          "cond": "cannotTryToRepair"
        }
      }
    },
    "repairing": {
      "on": {
        "REPAIR_SUCCESS": { "target": "idle" },
        "REPAIR_FAILURE": { "target": "diagnosing" }
      }
    }
  }
}
